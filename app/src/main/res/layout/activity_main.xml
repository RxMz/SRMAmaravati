<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#09C"
    tools:context="minocha.rishabh.srmamaravati.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="SRM Amaravati Student Portal" />
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:hint="@string/enter_userID"
        android:id="@+id/etStudentID"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/etPassword"
        android:hint="@string/enter_password"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#0180ab"
        android:id="@+id/btnLogin"
        android:text="Login"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="#0180ab"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSignUp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="This app is currently in it's beta stage."/>
</LinearLayout>
